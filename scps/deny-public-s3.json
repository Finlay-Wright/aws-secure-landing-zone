{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyS3PublicACLs",
      "Effect": "Deny",
      "Action": [
        "s3:PutObjectAcl",
        "s3:PutBucketAcl"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "s3:x-amz-acl": [
            "public-read",
            "public-read-write",
            "authenticated-read"
          ]
        }
      }
    },
    {
      "Sid": "DenyS3PublicPolicies",
      "Effect": "Deny",
      "Action": "s3:PutBucketPolicy",
      "Resource": "*",
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "DenyDisableS3BlockPublicAccess",
      "Effect": "Deny",
      "Action": [
        "s3:PutAccountPublicAccessBlock",
        "s3:PutBucketPublicAccessBlock"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "s3:BlockPublicAcls": "TRUE",
          "s3:BlockPublicPolicy": "TRUE",
          "s3:IgnorePublicAcls": "TRUE",
          "s3:RestrictPublicBuckets": "TRUE"
        }
      }
    }
  ]
}
